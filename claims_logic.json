{
  "condition": "Check Claim Type",
  "then": [
    {
      "condition": "Claim Type is Inpatient",
      "then": {
        "condition": "Check DRG Code",
        "then": [
          {
            "condition": "DRG Code is 001-010",
            "then": {
              "condition": "Check Length of Stay",
              "then": [
                {
                  "condition": "LOS ≤ 3 days",
                  "action": "Approve"
                },
                {
                  "condition": "3 < LOS ≤ 7 days",
                  "action": "Review Medical Necessity"
                },
                {
                  "condition": "LOS > 7 days",
                  "action": "Manual Review Required"
                }
              ]
            }
          },
          {
            "condition": "DRG Code is 011-020",
            "then": {
              "condition": "Check Severity Level",
              "then": [
                {
                  "condition": "Severity is Low",
                  "action": "Approve"
                },
                {
                  "condition": "Severity is Medium",
                  "action": "Review Documentation"
                },
                {
                  "condition": "Severity is High",
                  "action": "Expedited Review"
                }
              ]
            }
          },
          {
            "condition": "DRG Code is 021-030",
            "then": {
              "condition": "Check Comorbidities",
              "then": [
                {
                  "condition": "No Comorbidities",
                  "action": "Standard Review"
                },
                {
                  "condition": "1-2 Comorbidities",
                  "action": "Enhanced Review"
                },
                {
                  "condition": "3+ Comorbidities",
                  "action": "Complex Case Review"
                }
              ]
            }
          }
        ]
      }
    },
    {
      "condition": "Claim Type is Outpatient",
      "then": {
        "condition": "Check Procedure Code",
        "then": [
          {
            "condition": "Procedure Code is 1001-1010",
            "then": {
              "condition": "Check Facility Type",
              "then": [
                {
                  "condition": "Hospital-based",
                  "action": "Standard Rate"
                },
                {
                  "condition": "Freestanding",
                  "action": "Enhanced Rate"
                },
                {
                  "condition": "ASC",
                  "action": "ASC Rate"
                }
              ]
            }
          },
          {
            "condition": "Procedure Code is 1011-1020",
            "then": {
              "condition": "Check Modifiers",
              "then": [
                {
                  "condition": "No Modifiers",
                  "action": "Base Payment"
                },
                {
                  "condition": "Modifier -25",
                  "action": "E/M + Procedure"
                },
                {
                  "condition": "Modifier -59",
                  "action": "Separate Procedure"
                }
              ]
            }
          },
          {
            "condition": "Procedure Code is 1021-1030",
            "then": {
              "condition": "Check Place of Service",
              "then": [
                {
                  "condition": "Office",
                  "action": "Office Rate"
                },
                {
                  "condition": "Facility",
                  "action": "Facility Rate"
                },
                {
                  "condition": "Home",
                  "action": "Home Rate"
                }
              ]
            }
          }
        ]
      }
    },
    {
      "condition": "Claim Type is Emergency",
      "then": {
        "condition": "Check Emergency Level",
        "then": [
          {
            "condition": "Level 1 (Critical)",
            "then": {
              "condition": "Check Time of Service",
              "then": [
                {
                  "condition": "Peak Hours",
                  "action": "Peak Rate"
                },
                {
                  "condition": "Off-Peak Hours",
                  "action": "Standard Rate"
                },
                {
                  "condition": "Weekend/Holiday",
                  "action": "Premium Rate"
                }
              ]
            }
          },
          {
            "condition": "Level 2 (Urgent)",
            "then": {
              "condition": "Check Transport Type",
              "then": [
                {
                  "condition": "Ground",
                  "action": "Standard Transport"
                },
                {
                  "condition": "Air",
                  "action": "Air Transport"
                },
                {
                  "condition": "Water",
                  "action": "Maritime Transport"
                }
              ]
            }
          },
          {
            "condition": "Level 3 (Non-Critical)",
            "then": {
              "condition": "Check Distance",
              "then": [
                {
                  "condition": "< 25 miles",
                  "action": "Local Rate"
                },
                {
                  "condition": "25-50 miles",
                  "action": "Regional Rate"
                },
                {
                  "condition": "> 50 miles",
                  "action": "Long Distance Rate"
                }
              ]
            }
          }
        ]
      }
    }
  ]
} 